<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.raziel.razielmovie.SearchInMovieApi"
    tools:showIn="@layout/activity_search_in_movie_api"
    android:background="@color/appBackground">



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_search_activity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/movie_rew_cardview">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/connection_error_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="50sp"
            android:gravity="center"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@android:color/holo_red_light"
            android:text="@string/connection_error"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>
